@model PagedResult<VoteApp.ViewModels.QnAsViewModel>

@{
    ViewData["Title"] = "QnAs/Index";
}

<h1>Exam Papers</h1>

<div>
    <br />
    <a asp-action="Create" asp-controller="QnAs" class="btn btn-primary">Create</a>
    
    <div>
        <table id="qnaGrid"
               class="table table-striped table-bordered dt-responsive nowarp"
               width="100%" cellspacing="0">
            <thead>
            <tr>
                <th>Questions</th>
                <th>Options 1</th>
                <th>Options 2</th>
                <th>Options 3</th>
                <th>Options 4</th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.Question</td>
                    <td>@item.Option1</td>
                    <td>@item.Option2</td>
                    <td>@item.Option3</td>
                    <td>@item.Option4</td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#qnaGrid').DataTable({
                "paging": false,
                "filter": true
            });
        });
    </script>
}