@model PagedResult<VoteApp.ViewModels.UserViewModel>

@{
    ViewData["Title"] = "Users/Index";
}

<div>
    <br/>
    <a asp-action="Create" asp-controller="Users" class="btn btn-primary">Create New</a>
    <div>
        <table id="userGrid"
               class="table table-striped table-borded dt-responsive nowrap"
               width="100%" cellspacing="0">
        <thead>
        <tr>
            <th>Name</th>
            <th>Username</th>
            <th>Role</th>
        </tr>
        </thead>
        <tbody>
        @foreach (var item in Model.Data)
        {
            <td>@item.Name</td>
            <td>@item.UserName</td>
            <td>Teacher</td>
        }
        </tbody>
        </table>
    </div>
</div>