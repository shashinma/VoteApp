@model PagedResult<VoteApp.ViewModels.GroupViewModel>

@{
    ViewData["Title"] = "Groups/Index";
}

<div>
    <br />
    <a asp-action="Create" asp-controller="Groups" class="btn btn-primary">Create</a>
    <div>
        <table id="groupGrid" class="table table-striped table-bordered table-hover dt-responsive nowarp">
            <thead>
            <tr>
                <th>Name</th>
                <th>Description</th>
                <th></th>
            </tr>
            </thead>
            <tbody>
            @foreach (var item in Model.Data)
            {
                <tr>
                    <td>@item.Name</td>
                    <td>@item.Description</td>
                    <td>
                        <a asp-action="Details" asp-controller="Groups"
                           asp-all-route-data="@(new Dictionary<string, string> { { "groupId", item.Id.ToString() } })"
                           class="btn btn-primary">Students</a>
                    </td>
                </tr>
            }
            </tbody>
        </table>
    </div>
</div>

@section Scripts {
    <script>
        $(document).ready(function () {
            $('#groupGrid').DataTable({
                "paging": false,
                "filter": true,
            });
        });
    </script>
}